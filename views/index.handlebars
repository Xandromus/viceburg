        <button type="submit" class="btn btn-large btn-fire d-block mx-auto">Add Burger</button>
      </form>
    </div>
    <div class="container mt-5 card">
      <div class="row">
        <div class="col-6">
          <h2 class="text-center">Temptation</h2>

          <ul>
            {{#each burgers}} {{#unless devoured}}
            <li>
              {{math @index "+" 1}}. {{burger_name}}

              <button data-burgerid="{{this.id}}" class="change-burger btn btn-large btn-fire">Give in</button>
            </li>
            {{/unless}} {{/each}}
          </ul>
        </div>
        <div class="col-6">
          <h2 class="text-center">Gluttony</h2>

          <ul>
            {{#each burgers}} {{#if devoured}}
            <li>
              {{math @index "+" 1}}. {{burger_name}}

              <button data-burgerid="{{this.id}}" class="delete-burger btn btn-large btn-purge">Purge</button>
            </li>
            {{/if}} {{/each}}
          </ul>
        </div>
      </div>
    </div>


  </div>
</main>