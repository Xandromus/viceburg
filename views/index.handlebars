<h1>Burgers!</h1>

<h2>Uneaten</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        {{math @index "+" 1}}.
				{{burger_name}}

        <button data-burgerid="{{this.id}}" class="change-burger">Devour!</button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{math @index "+" 1}}.
				{{burger_name}}

        <button data-burgerid="{{this.id}}" class="delete-burger">Delete!</button>
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="addburger">
	<div class="form-group">
    <label for="ca">New Burger:</label>
    <input type="text" id="burger" name="burger">
  </div>
  <button type="submit">Add Burger</button>
</form>